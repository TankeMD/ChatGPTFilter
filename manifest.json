{
  "manifest_version": 2,
  "name": "ChatGPT Filter",
  "version": "1.3",
  "description": "Plugin para reemplazar la cadena 'dp' por 'xx' en la p√°gina web de chat de OpenAI",
  
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": [
    "activeTab",
    "declarativeContent",
    "scripting",
    "storage"
  ],

  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "24": "icon24.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "64": "icon64.png",
      "128": "icon128.png"
    },
    "default_title": "ChatGPT Filter",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}